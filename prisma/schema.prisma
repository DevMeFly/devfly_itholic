// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email        String        @unique
  stripeId     String        @unique
  createdAt    DateTime      @default(now())
  isSubscribed  Boolean     @default(false)
  courses      Course[]
}

model Roadmap {
  id        Int      @id @default(autoincrement())
  title     String   
  roadmaplink     String
  icon     String
  courses   Course[]
}

model Course {
  id        Int      @id @default(autoincrement())
  title     String   @unique
  slug      String  @unique
  whatyoulearn String
  why String
  requirements   Requirement[]
  lessons   Lesson[]
  description     String
  createdAt DateTime @default(now())
  duration String
  author   String
  users     User[]
  price     Int
  thumbnail String
  roadmapId  Int
  roadmap    Roadmap   @relation(fields: [roadmapId], references: [id])
}

model Lesson {
  id        Int      @id @default(autoincrement())
  title     String   @unique
  description     String
  courseId  Int
  duration String
  videoUrl  String
  createdAt DateTime @default(now())
  course    Course   @relation(fields: [courseId], references: [id])
  content   Content[]
  slug      String  @unique
}
model Content {
  id        Int      @id @default(autoincrement())
  content     String
  lessonId  Int   
  lesson    Lesson   @relation(fields: [lessonId], references: [id])
}

model Requirement {
  id        Int      @id @default(autoincrement())
  courseId  Int
  course    Course   @relation(fields: [courseId], references: [id])
  title     String   
  requirementlink     String   
}


